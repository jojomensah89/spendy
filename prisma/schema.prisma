generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Setup for local development
  provider = "sqlite"
  url="file:./dev.db"
}



model UserSettings{
  userId String @id
  currency String
} 

model Category {
  name String
  userId String
  icon String
  createdAt DateTime @default(now())
  type String @default("income")

  @@unique([name, userId,type])
}
model Transaction {
  id String @id @default(uuid())
  userId String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  
  category String
  categoryIcon String

  amount Float
  description String
  date DateTime
  type String @default("income")

}

model MonthHistory {
  day Int
  month Int
  year Int
  userId String
  income Float
  expense Float

  @@id([day,month,year,userId])
}

model YearHistory {
  month Int
  year Int
  userId String
  income Float
  expense Float

  @@id([month,year,userId])
}